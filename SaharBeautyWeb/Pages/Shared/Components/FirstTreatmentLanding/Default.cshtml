@using SaharBeautyWeb.Models.Entities.Treatments.Models.Landing

<link href="~/layout/assets/css/pages/layoutlanding/treatmentlanding.css" rel="stylesheet" />
@model List<GetTreatmentsForLandingDto>

<section class="offer-area ptb-100">
    <div class="offer-shape">
        <img src="~/Layout/assets/images/offer/offer-shape1.png" alt="Shape">
    </div>
    <div class="container">
        <div class="section-title">
            <h2> خدمات ما</h2>
        </div>
        <div class="offer-slider owl-theme owl-carousel">
            @foreach (var item in Model)
            {
                <div class="offer-item img-box">
                    <img src="@item.Media.URL" alt="Offer">
                    <div class="offer-content">
                        <h4>@item.Title</h4>
                        <a asp-page="Landing/Treatments/Details" asp-route-id="@item.Id" class="offer-link">مشاهده</a>
                    </div>
                </div>
            }
        </div>
    </div>
</section>