@using SaharBeautyWeb.Models.Entities.Treatments.Models.Landing
@model GetTreatmentGalleryImageModel

<link href="~/layout/assets/css/pages/commponents/reviwe-comments/review-comments.css" rel="stylesheet" />

<section class="component-section bg-white">
    <div class="container mx-auto px-4">

        <div class="section-title text-center">
            <h2 class="title">گالری تصاویر</h2>
        </div>

        <div class="scroll-wrapper relative">

            <button class="scroll-btn prev">
                <i class="fa-solid fa-chevron-left"></i>
            </button>

            <div class="scroll-container flex gap-6 overflow-x-auto scroll-smooth pb-4">
                @if (Model.AllTreatmentImages.Any())
                {
                    foreach (var item in Model.AllTreatmentImages)
                    {
                        foreach (var img in item.Images)
                        {
                            <div class="slide flex-shrink-0 w-64 card-wrapper">
                                <img src="@img.Url" alt="@item.TreatmentTitle" class="gallery-image">
                                <span class="image-caption">@item.TreatmentTitle</span>
                            </div>
                        }
                    }
                }
            </div>

            <button class="scroll-btn next">
                <i class="fa-solid fa-chevron-right"></i>
            </button>

        </div>

        <div class="pagination-wrapper text-center mt-4">
            <button class="page-btn-gallery" data-page="@(Model.CurrentPage - 1)" @(Model.CurrentPage == 0 ? "disabled" : "")>
                قبلی
            </button>
            <span>@(Model.CurrentPage + 1) از @(Model.TotalPages)</span>
            <button class="page-btn-gallery" data-page="@(Model.CurrentPage + 1)" @(Model.CurrentPage >= Model.TotalPages - 1 ? "disabled" : "")>
                بعدی
            </button>
        </div>

    </div>
</section>
