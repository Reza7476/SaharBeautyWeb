@using SaharBeautyWeb.Models.Entities.Banners.Landing
@model BannerLandingModel

@if (Model != null)
{
    <section id="home" class="relative h-[55vh] md:h-[75vh] flex items-center justify-center pt-16">
        <!-- تصویر پس‌زمینه -->
        <div class="absolute inset-0 z-0">
            <img src="@Model.URL"
                 alt="سالن زیبایی"
                 class="w-full h-full object-cover object-center">
            <div class="absolute inset-0 bg-black/40"></div> <!-- overlay تیره -->
        </div>

        <!-- محتوای بنر -->
        <div class="container mx-auto px-4 z-10 text-center text-white">
            <h1 class="text-4xl md:text-6xl font-bold mb-6">@Model.Title</h1>
            <p class="text-lg md:text-xl mb-8 max-w-2xl mx-auto">
                جایی که زیبایی شما اولویت ماست
            </p>

            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a href="/UserPanels/Client/Appointment"
                   class="bg-pink-600 hover:bg-pink-700 text-white px-8 py-3 rounded-md text-lg transition-colors">
                    رزرو نوبت آنلاین
                </a>
                <a href="#services"
                   class="bg-white/10 backdrop-blur-sm text-white border-2 border-white hover:bg-white/20 px-8 py-3 rounded-md text-lg transition-colors">
                    مشاهده خدمات
                </a>
            </div>
        </div>
    </section>
}

