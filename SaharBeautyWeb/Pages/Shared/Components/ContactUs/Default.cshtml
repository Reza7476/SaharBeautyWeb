@using SaharBeautyWeb.Models.Entities.AboutUs.Management.Dtos
@model GetAboutUsDto

<link href="~/layout/assets/css/pages/commponents/contactus/contact-us.css" rel="stylesheet" />
@if (Model != null)
{

    <footer class="bg-gray-50 pt-12 pb-8">
        <div class="container mx-auto px-4">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">

                <!-- اطلاعات تماس -->
                <div class="space-y-4">
                    <h3 class="text-lg font-semibold text-gray-700 mb-2">اطلاعات تماس</h3>
                    <ul class="text-gray-600 space-y-1">
                        <li><strong>آدرس:</strong> @(Model.Address )</li>
                        <li><strong>تلفن تماس:</strong> @(Model.Telephone )</li>
                        <li><strong>موبایل:</strong> @(Model.MobileNumber )</li>
                        <li><strong>ایمیل:</strong> @(Model.Email )</li>
                    </ul>
                    <div class="mt-4">
                        <iframe class="w-full h-48 rounded-md border"
                                src="https://www.google.com/maps?q=@Model!.Latitude,@Model.Longitude&z=15&output=embed"
                                allowfullscreen
                                loading="lazy"
                                referrerpolicy="no-referrer-when-downgrade">
                        </iframe>
                    </div>
                </div>

                <!-- لوگو -->
                <div class="flex flex-col items-center justify-center">
                    @if (Model.LogoImage != null)
                    {
                        <img class="w-40 h-auto mb-4 rounded-lg shadow-md" 
                             src="@Model.LogoImage.Url" alt="@Model.LogoImage.ImageName" />
                    }
                    <p class="text-gray-500 text-center">سالن زیبایی شایسته</p>
                </div>

                <!-- ساعات کاری -->
                <div class="space-y-4">
                    <h3 class="text-lg font-semibold text-gray-700 mb-2">ساعات کاری</h3>
                    <div class="grid grid-cols-2 gap-2 text-gray-600">
                        <div class="space-y-1">
                            <p>شنبه:</p>
                            <p>یک‌شنبه:</p>
                            <p>دوشنبه:</p>
                            <p>سه‌شنبه:</p>
                            <p>چهارشنبه:</p>
                            <p>پنج‌شنبه:</p>
                        </div>
                        <div class="space-y-1 text-right">
                            <p>16:00 - 21:00</p>
                            <p>16:00 - 21:00</p>
                            <p>16:00 - 21:00</p>
                            <p>16:00 - 21:00</p>
                            <p>16:00 - 21:00</p>
                            <p>16:00 - 21:00</p>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </footer>
}
