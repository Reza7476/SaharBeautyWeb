
<!doctype html>
<html lang="en" dir="rtl">

<head>

    <meta charset="utf-8" />
    <title>Dashboard | پنل مدیریت فوداتکو</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Premium Multipurpose Admin & Dashboard Template" name="description" />
    <meta content="Themesbrand" name="author" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/Layout/Admin/assets/images/favicon.ico">

    <!-- plugin css -->
    <link href="~/Layout/Admin/assets/libs/admin-resources/jquery.vectormap/jquery-jvectormap-1.2.2.css" rel="stylesheet" type="text/css" />

    <!-- preloader css -->
    <link rel="stylesheet" href="~/Layout/Admin/assets/css/preloader.min.css" type="text/css" />

    <!-- Bootstrap Css -->
    <link href="~/Layout/Admin/assets/css/bootstrap-rtl.min.css" id="bootstrap-style" rel="stylesheet" type="text/css" />
    <!-- Icons Css -->
    <link href="~/Layout/Admin/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <!-- App Css-->
    <link href="~/Layout/Admin/assets/css/app-rtl.min.css" id="app-style" rel="stylesheet" type="text/css" />
    <link href="~/css/shimmer.css" rel="stylesheet" />
    
</head>

<body>

    <!-- <body data-layout="horizontal"> -->
    <!-- Begin page -->
    <div id="layout-wrapper">
        <header id="page-topbar">
            <div class="navbar-header">

                @await Component.InvokeAsync("Logo")

                <div class="d-flex">

                    @await Component.InvokeAsync("DarkMode")

                    @await Component.InvokeAsync("Notification")

                    @await Component.InvokeAsync("UserInfo")

                </div>
            </div>
        </header>
       
        @await Component.InvokeAsync("SideMenu")

        <!-- Left Sidebar End -->
        <!-- ============================================================== -->
        <div class="main-content">

            <div class="page-content">
                <div class="container-fluid">

                    @RenderBody()

                </div> <!-- container-fluid -->
            </div>
            <!-- End Page-content -->
            @await Component.InvokeAsync("Footer")

        </div>
        <!-- end main content-->

    </div>
    <!-- END layout-wrapper -->
    @await Component.InvokeAsync("LeftSetting")

    <!-- Right bar overlay-->
    <div class="rightbar-overlay"></div>

    <!-- JAVASCRIPT -->
    <script src="~/Layout/Admin/assets/libs/jquery/jquery.min.js"></script>
    <script src="~/Layout/Admin/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Layout/Admin/assets/libs/metismenu/metisMenu.min.js"></script>
    <script src="~/Layout/Admin/assets/libs/simplebar/simplebar.min.js"></script>
    <script src="~/Layout/Admin/assets/libs/node-waves/waves.min.js"></script>
    <script src="~/Layout/Admin/assets/libs/feather-icons/feather.min.js"></script>
    <!-- pace js -->
    <script src="~/Layout/Admin/assets/libs/pace-js/pace.min.js"></script>

    <!-- apexcharts -->
    <script src="~/Layout/Admin/assets/libs/apexcharts/apexcharts.min.js"></script>

    <!-- Plugins js-->
    <script src="~/Layout/Admin/assets/libs/admin-resources/jquery.vectormap/jquery-jvectormap-1.2.2.min.js"></script>
    <script src="~/Layout/Admin/assets/libs/admin-resources/jquery.vectormap/maps/jquery-jvectormap-world-mill-en.js"></script>
    <!-- dashboard init -->
    <script src="~/Layout/Admin/assets/js/pages/dashboard.init.js"></script>

    <script src="~/Layout/Admin/assets/js/app.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

   

    <div class="modal fade show" 
         id="staticBackdrop"
         data-bs-backdrop="static"
         data-bs-keyboard="false"
         tabindex="-1"
         aria-labelledby="staticBackdropLabel"
         style="display: none;"
         aria-modal="true" 
         role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">عنوان مدال</h5>
                    <button type="button" 
                        class="btn-close" 
                        data-bs-dismiss="modal"
                        aria-label="Close">
                    </button>
                </div>
                <div class="modal-body">
                    <p>اگر بیرون از من کلیک کنید، نمی بندم. حتی سعی نکنید کلید فرار را فشار دهید.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">بستن</button>
                    <button type="button" class="btn btn-primary">فهمیدید</button>
                </div>
            </div>
        </div>
    </div>

    @RenderSection("scripts", false)

    <script>
        var errorMessages = {};

        fetch('/config/exception.json') 
            .then(res => res.json())
            .then(data => {
                errorMessages = data;
            })
            .catch(err => console.error("خطا در بارگذاری فایل JSON:", err));

        function handleApiError(errorKey) {
            let message = errorMessages[errorKey];
            console.log(message);
            if (!message || message.trim() === "") {
                message = errorKey || "یک خطای ناشناخته رخ داده است";
            }
            showPopup(message);
        }

        function showPopup(msg) {
            toastr.error(msg, "خطا", {
                closeButton: true,
                progressBar: true,
                positionClass: "toast-top-right",
                timeOut: 10000
            });
        }
    </script>
</body>

</html>