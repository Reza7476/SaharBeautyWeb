

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - پنل کاربری</title>

    <!-- Tailwind (optional, kept as you used before) -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Font Awesome (use CDN or local as you prefer) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Sidebar / Panel CSS (your file) -->
    <link href="~/layout/admin/assets/css/side-bar/side-bar.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <!-- Toastr CSS (if you use toastr) -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">



</head>

<body class="bg-gray-50">

    <!-- Sidebar Overlay (for mobile) -->
    <div id="sidebar-overlay" class="sidebar-overlay fixed inset-0 bg-black bg-opacity-50 z-40 md:hidden hidden"></div>

    <!-- Sidebar (rendered from ViewComponent) -->
    @await Component.InvokeAsync("SideMenu")

    <!-- Main Content -->
    <main id="main-content" class="mr-80 transition-all duration-300 min-h-screen">
        <!-- Top Header -->
        <header class="bg-white shadow-sm sticky top-0 z-30">
            <div class="flex items-center justify-between p-4">
                <button id="toggle-sidebar" class="text-gray-700 hover:text-pink-600 transition-colors">
                    <i class="fas fa-bars text-2xl"></i>
                </button>
            </div>
        </header>

        <!-- Page Content -->
        <div id="page-content" class="p-6">
            @Html.AntiForgeryToken()
            @RenderBody()
        </div>

        <!-- Modal (kept as you had) -->
        <div class="modal fade show"
             id="staticBackdrop"
             data-bs-backdrop="static"
             data-bs-keyboard="false"
             tabindex="-1"
             aria-labelledby="staticBackdropLabel"
             style="display: none;"
             aria-modal="true"
             role="dialog">
            <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button"
                                class="btn-close"
                                data-bs-dismiss="modal"
                                aria-label="Close">
                        </button>
                    </div>
                    <div class="modal-body">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-light" data-bs-dismiss="modal">بستن</button>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Render section for page-specific scripts -->
    @RenderSection("Scripts", false)

    <!-- ------------ scripts: ترتیب مهم است ------------ -->
    <!-- 1) jQuery (بار اول) -->
 

    <!-- 2) فایل‌های جاوااسکریپت سفارشی که به jQuery وابسته‌اند -->
    <script src="~/layout/admin/assets/js/customjquery/custom.js"></script>

    <!-- 3) فایل مستقل کنترل سایدبار (بدون وابستگی به jQuery) -->
    <script src="~/layout/admin/assets/js/pages/userpanels/side-bar/side-bar.js"></script>
    <!-- 4) کتابخانه‌های کمکی (toastr / persian-date / persian-datepicker / chart.js) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/persian-date@1.1.0/dist/persian-date.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/persian-datepicker@1.2.0/dist/js/persian-datepicker.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- 5) پیام‌های خطا (fetch config) و initial jQuery small snippet -->
    <script>
        var errorMessages = {};

        fetch('/config/exception.json')
            .then(res => res.json())
            .then(data => {
                errorMessages = data;
            }).catch(err => console.error("خطا در بارگذاری فایل JSON:", err));

        function handleApiError(errorKey) {
            let message = errorMessages[errorKey];
            if (!message) {
                message = errorKey;
                showPopup(message);
            }
            return message;
        }

        function showPopup(msg) {
            if (window.toastr) {
                toastr.error(msg, "خطا", {
                    closeButton: true,
                    progressBar: true,
                    positionClass: "toast-top-right",
                    timeOut: 10000
                });
            } else {
                alert(msg);
            }
        }

        // jQuery small ready (if custom logic needs to check an #error-input)
        $(function () {
            var error = $("#error-input").val();
            if (error) {
                handleApiError(error);
            }
        });
    </script>

    <!-- ------------ پایان scripts ------------ -->

</body>
</html>
