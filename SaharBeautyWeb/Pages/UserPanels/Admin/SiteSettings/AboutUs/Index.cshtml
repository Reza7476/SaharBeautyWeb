@page "{handler?}"
@model SaharBeautyWeb.Pages.UserPanels.Admin.SiteSettings.AboutUs.IndexModel
@{
    Layout = "_UserPanelLayout";
}
@if (string.IsNullOrEmpty(Model.ModelData.MobileNumber))
{
    <partial name="_AddAboutUsPartial" model="Model.AddAboutUsDto" />
}
else
{
    <partial name="_AboutUsDisplayPartial" model="Model.ModelData" />
}

@section Scripts {
    <script>
        var createAboutUs = '@Url.Page("Index", "CreateAboutUs")';
        var getAboutUsForEdit = '@Url.Page("Index", "GetAboutUsForEdit")';
        var applyEditAboutUs = '@Url.Page("Index","ApplyEditAboutUs")';
    </script>

    <script src="~/layout/admin/assets/js/pages/userpanels/admin/sitesettings/aboutus/aboutus.js"></script>
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
}