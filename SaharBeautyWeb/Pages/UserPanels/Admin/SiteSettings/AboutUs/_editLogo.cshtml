@using SaharBeautyWeb.Models.Entities.AboutUs.Management.Models
@model EditAboutUsModel
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">ویرایش لوگو </h4>
            </div>
            <div class="card-body">
                <div style="max-height:300px; overflow-y:auto">
                    <div class="row">
                        <div class="col-12">
                            <img class="img-thumbnail"
                                 alt="@Model.LogoDetails?.ImageName"
                                 src="@Model.LogoDetails?.Url"
                                 data-holder-rendered="true">
                            <br />
                        </div>
                    </div>
                </div>
                <hr />
                <div style="display:block" >
                    <form class="needs-validation"
                          method="post"
                          id="edit-about-us-logo-form"
                          asp-page="Index"
                          asp-page-handler="ApplyEditedAboutUsLogo"
                          enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class=" col-sm-6">
                                <div class=" mb-3">
                                    <input type="file"
                                           asp-for="Logo"
                                           id="edit-about-us-logo-input"
                                           class="form-control"
                                           placeholder="یک عکس بافرمت مناسب انتخاب کنید(jpeg/jpg/png)">
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="mb-3">
                                    <img class="img-thumbnail"
                                         alt=""
                                         width="200"
                                         src=""
                                         id="preview-edit-about-us-logo1212"
                                         data-holder-rendered="true">
                                </div>
                            </div>
                        </div>
                        <div>
                            <div class="col-12">

                                <button type="submit"
                                        class="btn btn-primary  col-12"
                                        id="apply-edited-about-us-logo"
                                        disabled>
                                   اعمال تغییرات
                                </button>
                            </div>
                        </div>
                        <div>
                            <input type="hidden" asp-for="@Model.Id"  value="@Model.Id" />
                            <input type="hidden" asp-for="@Model.MobileNumber"  value="@Model.MobileNumber" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>