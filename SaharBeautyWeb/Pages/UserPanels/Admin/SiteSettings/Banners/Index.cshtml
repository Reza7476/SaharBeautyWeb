@page "{handler?}"
@using SaharBeautyWeb.Models.Entities.Banners
@model SaharBeautyWeb.Pages.UserPanels.Admin.SiteSettings.Banners.IndexModel
@{
    Layout = "_UserPanelLayout";
    ViewData["ActiveMenu"] = "Banners";
}
<link href="~/layout/admin/assets/css/pages/banners/indexbannerstyle.css" rel="stylesheet" />

@if (Model.Banner != null)
{
    <div class="banner-card container">
        <div class="banner-info text-center">
            <h5 class="banner-title">@Model.Banner.Title</h5>
            <p class="banner-date">@Model.Banner.CreateDate</p>
        </div>

        <div class="banner-image-container">
            <img src="@Model.Banner.URL" alt="@Model.Banner.ImageName" class="banner-image" />
        </div>

        <div class="text-center mt-3">
            <button type="button"
                    class="btn btn-primary edit-banner-btn"
                    data-id="@Model.Banner.Id">
                ویرایش
            </button>
        </div>
    </div>
}
else
{
    <partial name="_AddPartial" model="Model.AddBanner" />
}

@section Scripts {
    <script src="~/layout/admin/assets/js/pages/userpanels/admin/sitesettings/banners/bannerjquery.js"></script>

    <script>
        var createBanner = '@Url.Page("Index", "CreateBanner")';
        var editBannerPartial = '@Url.Page("Index", "EditBannerPartial")';
        var editBanner = '@Url.Page("Index", "EditBanner")';

    </script>
}
