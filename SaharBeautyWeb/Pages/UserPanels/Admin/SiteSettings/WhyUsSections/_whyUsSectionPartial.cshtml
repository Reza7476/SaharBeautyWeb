@using SaharBeautyWeb.Models.Entities.WhyUsSections.Models
@model WhyUsSectionModel

<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">چرا ما</h5>
    </div>
    <div class="card-body">
        <div>
            <div class=" row">
                <div class="col-8">
                    <div class="row">

                        <div class="pb-3">
                            <div class="row">
                                <div class="col-lg-2">
                                    <div>
                                        <h5 class="font-size-15">عنوان :</h5>
                                    </div>
                                </div>
                                <div class="col-lg-10">
                                    <div class="text-muted">
                                        <p>@Model.Title</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <div class="py-3">
                                <div class="row">
                                    <div class="col-lg-4">
                                        <div>
                                            <h5 class="font-size-15">توضیحات :</h5>
                                        </div>
                                    </div>
                                    <div class="col-lg-8">
                                        <div class="text-muted">
                                            <p style="max-width:300px;
                                                      white-space: normal !important;
                                                      overflow-wrap:anywhere;
                                                      word-wrap: break-word;
                                                      word-break: break-word;">
                                                @Model.Description
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class=" col-4">
                    <div class="col-md-6">
                        <img class="img-fixed-size  rounded me-2"
                             data-holder-rendered="true"
                             alt="@Model.Media!.ImageName" 
                             src="@Model.Media.Url" 
                        >
                    </div>
                </div>
            </div>
            <div class="row">
                <button class="btn btn-primary  edit-why-us-section-btn" data-id="@Model.Id"> ویرایش </button>
            </div>
        </div>
    </div>
</div>